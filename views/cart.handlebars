{{!-- // Shopping Cart // --}}

<div class="container is-fluid mt-auto">
  <h2 class="mb-5 has-text-centered">Shopping Cart</h2> 
<div class="row is-justify-content-center">
  <div class="columns justify-content-center">
  <table id="cartTable" class="table">
      {{!-- // thead Top Start // --}}
      <thead>
        <tr>
          <th></th>
          <th>Product</th>
          <th>Name</th>
          <th>Qty</th>
          <th>Price</th>
          <th id="has-text-right" class="amount"><span>Amount</span></th>
        </tr>
      </thead>
        {{!-- thead Top End --}}
        {{!-- // tbody Content Start // forEach --}}
      <tbody>
        <tr>
          <td class="removeProduct">
            <button onclick="deleteRow()">x</button>
          </td>
          <td>
            <div class="product-img">
            <div class="img-product"><figure class="image is-128x128">{{product_image}}</figure>
            </div>
            </div>
          </td>
          <td><p>{{product_name}}</p>
          </td>
          <td>
            <div class="button-container">
            <button class="cart-qty-plus" type="button" value="+">+</button>

            <input type="text" name="qty" min="0" class="qty form-control" value="0">

          <button class="cart-qty-minus" type="button" value="-">-</button>
            </div> 
          </td>
          <td>
          <span class="price form-control" disabled></span>
          </td>
          <td align="right">${{product_price}}<span id="amount" class="amount" placeholder="0"></span>
          </td>
        </tr>
      </tbody>
      {{!-- tbody Content End  --}}
      {{!-- // tfoot Bottom Start // --}}
      <tfoot>
        <tr>
          <td colspan="5"></td>
          <td align="right">
            <strong>TOTAL = ${{total}}</strong>
        </tr>
      </tfoot>
      {{!-- // tfoot Bottom End // --}}
      </table>
    </div>
  </div>
</div>

<script src="/js/cart.js"></script>