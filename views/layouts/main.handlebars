  <body>
    <!---Nav Bar --->
<header class="site-header">
      <div class="site-header__top">
        <div class="wrapper site-header__wrapper">
          <div class="site-header__start">
            <ul class="">
              <li class=""><a href="/">Home</a></li>
            </ul>
          </div>
          <div class="site-header__middle">
            <a href="/" class="brand">Holiday Presents</a>
          </div>
          <div class="site-header__end">
            <a href="/cart" class="button">Cart <i class="fa fa-shopping-cart" aria-hidden="true"></i></a>
          </div>
        </div>
      </div>
      <div class="site-header__bottom">
        <div class="wrapper site-header__wrapper">
          <div class="site-header__start">
            <div class="search">
              <button class="search__toggle" aria-label="Open search">
                Search
              </button>
              <form class="search__form" action="">
                <label class="sr-only" for="search">Search</label>
                <input
                  type="search"
                  name=""
                  id="search"
                  placeholder="What's on your mind?"
                />
              </form>
            </div>
          </div>

          <div class="site-header__middle">
            <nav class="nav">
              <button class="nav__toggle" aria-expanded="false" type="button">
                menu
              </button>
              <ul class="nav__wrapper">
                <li class="nav__item"><a href="/">Home</a></li>
                <li class="nav__item"><a href="/category/2">Thanksgiving</a></li>
                <li class="nav__item"><a href="/category/1">Christmas</a></li>
        {{#if loggedIn}}

         <li class="nav__item" id="logout"><a href="#">Logout</a></li>

         {{else}}
        <li class="nav__item"><a href="/login">Login</a></li>
        {{/if}}
         </ul>
              </ul>
            </nav>
          </div>


          <div class="site-header__end">
            <a href="#">USA</a>
          </div>
        </div>
      </div>
    </header>

        <!--- Hero Image -->
        <div class="category">
          {{{body}}}
        </div>

